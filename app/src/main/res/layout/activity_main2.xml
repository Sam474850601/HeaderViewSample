<?xml version="1.0" encoding="utf-8"?>
<com.example.sameli.headerview.SuspensionLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/headerlayout"
    tools:context="com.example.sameli.headerview.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Hello World!"
        android:background="#00a000"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World2!"
        android:background="#ffa011"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview"
        android:background="#ffb0ff"
        />


</com.example.sameli.headerview.SuspensionLinearLayout>
